[Unit]
Description=Aila Ollama Service
After=network.target

[Service]
Environment="OLLAMA_MODELS=/aila/models"
Environment="OLLAMA_HOST=0.0.0.0:11434"
Environment="CUDA_VISIBLE_DEVICES=0"
ExecStart=/run/current-system/sw/bin/bash -lc "cd /aila/service/ollama && nix develop --command ollama serve"
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
